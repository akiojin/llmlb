{
  "name": "@llmlb/mcp-server",
  "version": "0.0.0-development",
  "description": "MCP server for llmlb (LLM Load Balancer) API operations via curl execution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "llmlb-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
