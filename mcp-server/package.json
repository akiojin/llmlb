  "author": "akiojin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiojin/llmlb.git",
    "directory": "mcp-server"
  },
  "homepage": "https://github.com/akiojin/llmlb/tree/main/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/akiojin/llmlb/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "hono": "^4.11.7",
    "yaml": "^2.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
