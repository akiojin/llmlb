{
  "name": "llmlb-release",
  "version": "2.3.1",
  "description": "Centralized management system for routing LLM inference runtimes across multiple machines.",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "prepare": "husky",
    "build": "npm run build:lb && npm run build:mcp",
    "build:lb": "cargo build --release -p llmlb",
    "build:lb:target": "cargo build --release -p llmlb --target",
    "build:mcp": "pnpm --filter @llmlb/mcp-server build",
    "test:mcp": "pnpm --filter @llmlb/mcp-server test",
    "start:lb": "./target/release/llmlb",
    "clean": "rm -rf target mcp-server/dist",
    "lint:commits": "commitlint --from origin/main --to HEAD",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!.git\" \"!.github\" \"!.worktrees\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@playwright/test": "^1.58.0",
    "bats": "^1.13.0",
    "bun": "^1.3.8",
    "husky": "^9.1.0",
    "markdownlint-cli2": "^0.20.0"
  },
  "workspaces": [
    "mcp-server",
    "llmlb/src/web/dashboard"
  ],
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "hono": "^4.11.5",
      "lodash": "^4.17.23"
    }
  }
}
